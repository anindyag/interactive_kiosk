<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/single_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="0.05"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/single_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/single_menu_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/decrement"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#2FCB71"
            android:clickable="true"
            android:src="@drawable/decrement" />

        <TextView
            android:id="@+id/menu_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="40dp" />

        <ImageButton
            android:id="@+id/increment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#2FCB71"
            android:clickable="true"
            android:src="@drawable/increment" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_cart_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:textSize="30dp"
            android:background="#2FCB71"
            android:layout_marginRight="16dp"/>

        <Button
            android:id="@+id/checkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:text="@string/checkout_text"
            android:background="#2FCB71"
            android:textSize="30dp" />
    </LinearLayout>


</LinearLayout>