<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#2FCB71"
        android:paddingTop="16dp"
        android:text="@string/single_menu_screen_header"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/single_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="0.05"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/single_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/single_menu_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/choose_extra_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:text="@string/choose_extra_menu_text"
            android:background="#2FCB71"
            android:textSize="30dp"
            android:layout_marginRight="16dp"/>


        <Button
            android:id="@+id/checkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:text="@string/checkout_text"
            android:background="#2FCB71"
            android:textSize="30dp" />
    </LinearLayout>


</LinearLayout>