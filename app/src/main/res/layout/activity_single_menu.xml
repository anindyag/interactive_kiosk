<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/single_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textSize="35dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/single_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textSize="35dp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/single_menu_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/decrement"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/decrement"
            android:background="#2FCB71"
            android:clickable="true"/>

        <TextView
            android:id="@+id/menu_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>

        <ImageButton
            android:id="@+id/increment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/increment"
            android:background="#2FCB71"
            android:clickable="true"/>
    </LinearLayout>

    <Button
        android:id="@+id/add_cart_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textSize="35dp"
        android:background="#2FCB71"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:visibility="gone"/>

</LinearLayout>